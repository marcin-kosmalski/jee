<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd">

	<defaultCache maxElementsInMemory="1000" eternal="true"
		overflowToDisk="false" />

	<cache name="entity.CachedUnit" maxElementsInMemory="500"
		eternal="false" timeToIdleSeconds="30" timeToLiveSeconds="60" />

	<cache name="org.hibernate.cache.internal.StandardQueryCache"
		maxElementsInMemory="500" eternal="false" timeToIdleSeconds="600"
		timeToLiveSeconds="3600" />

	<cache name="org.hibernate.cache.spi.UpdateTimestampsCache"
		maxElementsInMemory="50" eternal="true" />


</ehcache>
